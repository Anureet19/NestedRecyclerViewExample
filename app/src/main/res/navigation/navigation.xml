<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/favouriteListFragment">

    <fragment
        android:id="@+id/favouriteListFragment"
        android:name="com.anureet.nestedrecyclerviewexample.ui.FavouriteListFragment"
        android:label="fragment_favourite_list"
        tools:layout="@layout/fragment_favourite_list" >
        <action
            android:id="@+id/action_favouriteListFragment_to_favouriteDetailFragment"
            app:destination="@id/favouriteDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment
        android:id="@+id/favouriteDetailFragment"
        android:name="com.anureet.nestedrecyclerviewexample.ui.FavouriteDetailFragment"
        android:label="fragment_favourite_detail"
        tools:layout="@layout/fragment_favourite_detail" >
        <argument
            android:name="id"
            app:argType="long"
            android:defaultValue="0L"/>
    </fragment>
</navigation>